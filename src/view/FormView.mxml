<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="vertical" width="100%" height="100%">

    <mx:Form width="100%" height="100%">

        <mx:FormItem label="Name:">
            <mx:TextInput id="nameTextInput" />
        </mx:FormItem>

        <mx:FormItem label="Email:">
            <mx:TextInput id="emailTextInput" />
        </mx:FormItem>

        <mx:FormItem label="Date of Birth:">
            <mx:DateField id="dobDateField" />
        </mx:FormItem>

        <mx:FormItem label="Gender:">
            <mx:ComboBox id="genderComboBox">
                <mx:ArrayCollection>
                    <mx:Object label="Male" />
                    <mx:Object label="Female" />
                </mx:ArrayCollection>
            </mx:ComboBox>
        </mx:FormItem>

        <mx:FormItem>
            <mx:Button label="Submit" />
        </mx:FormItem>

    </mx:Form>

</mx:Application>
